# $Owl: Owl/build/.rpmmacros,v 1.13 2011/11/04 02:39:04 solar Exp $
%_tmppath %home/tmp-work
%_topdir %home/rpm-work-%number
%buildroot %home/rpm-work-%number/buildroot
%_unpackaged_files_terminate_build 1
%_missing_doc_files_terminate_build 1
# i386
%optflags_lib_i386 -pipe -march=i386 -mtune=i686 -O2 -fno-omit-frame-pointer -momit-leaf-frame-pointer -Wl,-z,relro
%optflags_bin_i386 -pipe -march=i386 -mtune=i686 -O2 -fomit-frame-pointer -mpreferred-stack-boundary=2 -Wl,-z,relro
# i686
%optflags_lib_i686 -pipe -march=i686 -O2 -fno-omit-frame-pointer -momit-leaf-frame-pointer -Wl,-z,relro
%optflags_bin_i686 -pipe -march=i686 -O2 -fomit-frame-pointer -mpreferred-stack-boundary=2 -Wl,-z,relro
# x86_64
%optflags_lib_x86_64 -pipe -O2 -momit-leaf-frame-pointer -Wl,-z,relro
%optflags_bin_x86_64 -pipe -O2 -fomit-frame-pointer -Wl,-z,relro
# sparc
%optflags_lib_sparc -pipe -mcpu=v8 -mtune=ultrasparc -O2 -Wl,-z,relro
%optflags_bin_sparc -pipe -mcpu=v8 -mtune=ultrasparc -O2 -fomit-frame-pointer -Wl,-z,relro
# sparcv9
%optflags_lib_sparcv9 -pipe -mcpu=ultrasparc -Wa,-Av8plusa -O2 -Wl,-z,relro
%optflags_bin_sparcv9 -pipe -mcpu=ultrasparc -Wa,-Av8plusa -O2 -fomit-frame-pointer -Wl,-z,relro
# alpha
%optflags_lib_alpha -pipe -mcpu=ev4 -O2 -Wl,-z,relro
%optflags_bin_alpha -pipe -mcpu=ev4 -O2 -fomit-frame-pointer -Wl,-z,relro
# alphaev56
%optflags_lib_alphaev56 -pipe -mcpu=ev56 -O2 -Wl,-z,relro
%optflags_bin_alphaev56 -pipe -mcpu=ev56 -O2 -fomit-frame-pointer -Wl,-z,relro
#
%optflags_lib %{expand:%{optflags_lib_%{expand:%buildarch}}}
%optflags_bin %{expand:%{optflags_bin_%{expand:%buildarch}}}
