+					break;
+				if (retval == 0)
+					return 0;
+				if (EINTR == errno)
+					continue;
+				snprintf(handle->errbuf, sizeof(handle->errbuf),
+					 "select: %s", pcap_strerror(errno));
+				return -1;
+			}
