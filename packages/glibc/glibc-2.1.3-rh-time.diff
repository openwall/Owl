+#include <stddef.h>
+#include <stdio.h>
+#include <stdlib.h>
+#include <time.h>
+
+
+/* Prints the date in the form "Day Mon dd hh:mm:ss ZZZ yyyy\n".
+   A simple test for localtime and strftime.  */
+int
+main (argc, argv)
+     int argc;
+     char **argv;
+{
+  time_t t = time (NULL);
+  struct tm *tp = localtime (&t);
+  char good = tp != NULL;
+
+  if (good)
+    {
+      char buf[BUFSIZ];
+      good = strftime (buf, sizeof (buf), "%a %b %d %X %Z %Y", tp);
+      if (good)
+	puts (buf);
+      else
+	perror ("strftime");
+    }
+  else
+    perror ("localtime");
+
+  return good ? EXIT_SUCCESS : EXIT_FAILURE;
+}
