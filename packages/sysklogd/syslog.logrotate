/var/log/kernel {
    postrotate
	test -f /var/run/syslogd.pid && kill -HUP `cat /var/run/syslogd.pid`
    endscript
}

/var/log/messages {
    postrotate
	test -f /var/run/syslogd.pid && kill -HUP `cat /var/run/syslogd.pid`
    endscript
}

/var/log/maillog {
    postrotate
	test -f /var/run/syslogd.pid && kill -HUP `cat /var/run/syslogd.pid`
    endscript
}

/var/log/cron {
    postrotate
	test -f /var/run/syslogd.pid && kill -HUP `cat /var/run/syslogd.pid`
    endscript
}
