diff -ur iputils.orig/ping.c iputils/ping.c
--- iputils.orig/ping.c	Sun Dec  2 21:28:32 2001
+++ iputils/ping.c	Wed May 29 05:08:42 2002
@@ -1119,7 +1119,13 @@
 pr_addr(__u32 addr)
 {
 	struct hostent *hp;
-	static char buf[4096];
+	static char buf[256 + 32];
+	static __u32 prevaddr;
+	static int cached = 0;
+
+	/* Return previous result if same input (avoid multiple lookups) */
+	if (cached && addr == prevaddr)
+		return(buf);
 
 	if ((options & F_NUMERIC) ||
 	    !(hp = gethostbyaddr((char *)&addr, 4, AF_INET)))
@@ -1127,6 +1133,10 @@
 	else
 		snprintf(buf, sizeof(buf), "%s (%s)", hp->h_name,
 			 inet_ntoa(*(struct in_addr *)&addr));
+
+	prevaddr = addr;
+	cached = 1;
+
 	return(buf);
 }
 
