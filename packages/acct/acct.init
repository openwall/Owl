#! /bin/sh
#
# Start or stop process accounting

ACCTON=/sbin/accton

test -x $ACCTON || exit 0

case "$1" in
start)
	echo "Starting process accounting"
	$ACCTON /var/account/pacct 2>/dev/null
	;;
stop)
	echo "Stopping process accounting"
	$ACCTON 2>/dev/null
	;;
restart)
	$0 stop
	$0 start
	;;
*)
	echo "Usage: acct {start|stop|restart}"
	exit 1
esac

exit $?
